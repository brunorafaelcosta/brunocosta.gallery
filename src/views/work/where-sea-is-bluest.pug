extends ../../templates/view.pug

block append variables
    - var work = works['where-sea-is-bluest']
    - var page_id = 'where-sea-is-bluest-work-page'
    - var current_slug = 'work/' + work.slug
    - var selected_menu_option = work.menu_item_id
    - var selected_works_is_active = true
    - var title = work.title
    - var static_folder_path = '../../static'
    - var work_imagens_path = static_folder_path + '/images/work/where-sea-is-bluest'

block view_content
    .fixed-column
        .bg.bg-blur(data-bg=work_imagens_path + '/main_thumbnail.jpg')
        .work-main-image.with-max-width
            img.respimg(src=work_imagens_path + '/main_thumbnail.jpg' alt='')
            a.single-popup-image.slider-zoom(data-src=work_imagens_path + '/main.jpg')
                i.fa.fa-search

    .column-wrap
        .content
            section
                .section-title
                    h2 #{work.title}

                .section-content
                    blockquote.music-blockquote
                        p
                            | #{work.text.quote_1_1}
                            if (work.text.quote_1_1_translation_source.length)
                                br
                                span.blockquote-line-translation_source #{work.text.quote_1_1_translation_source}
                            br
                            | #{work.text.quote_1_2}
                            if (work.text.quote_1_2_translation_source.length)
                                br
                                span.blockquote-line-translation_source #{work.text.quote_1_2_translation_source}
                            br
                            | #{work.text.quote_1_3}
                            if (work.text.quote_1_3_translation_source.length)
                                br
                                span.blockquote-line-translation_source #{work.text.quote_1_3_translation_source}
                        p #{work.text.quote_1_author}
                    .gallery-items.boxed-folio.hid-port-info

                        .gallery-item.gallery-item-second
                            .grid-item-holder
                                img(src=work_imagens_path + '/DSCF0462_thumbnail.jpg' alt='')
                                a.single-popup-image.slider-zoom(data-src=work_imagens_path + '/DSCF0462.jpg')
                                    i.fa.fa-search
                        
                        .gallery-item.gallery-item-second
                            .grid-item-holder
                                img(src=work_imagens_path + '/DSCF0479_thumbnail.jpg' alt='')
                                a.single-popup-image.slider-zoom(data-src=work_imagens_path + '/DSCF0479.jpg')
                                    i.fa.fa-search
                        
                        .gallery-item.gallery-item-second
                            .grid-item-holder
                                img(src=work_imagens_path + '/DSCF1494_thumbnail.jpg' alt='')
                                a.single-popup-image.slider-zoom(data-src=work_imagens_path + '/DSCF1494.jpg')
                                    i.fa.fa-search
                        
                        .gallery-item.gallery-item-second
                            .grid-item-holder
                                img(src=work_imagens_path + '/DSCF1432_thumbnail.jpg' alt='')
                                a.single-popup-image.slider-zoom(data-src=work_imagens_path + '/DSCF1432.jpg')
                                    i.fa.fa-search
                        
                        .gallery-item.gallery-item-second
                            .grid-item-holder
                                img(src=work_imagens_path + '/DSCF1460_thumbnail.jpg' alt='')
                                a.single-popup-image.slider-zoom(data-src=work_imagens_path + '/DSCF1460.jpg')
                                    i.fa.fa-search
                        
                        .gallery-item.gallery-item-second
                            .grid-item-holder
                                img(src=work_imagens_path + '/DSCF1474_thumbnail.jpg' alt='')
                                a.single-popup-image.slider-zoom(data-src=work_imagens_path + '/DSCF1474.jpg')
                                    i.fa.fa-search

                    ul.work-details
                        li
                            span #{text.location} : 
                            a(href=work.details.location.url target='_blank') #{work.details.location.value}
                        li
                            span #{text.year} : 
                            a(href='#') #{work.details.date}
                        li
                            span #{text.gear} : 
                            a(href='#') #{work.details.gear}
                    
                    if share_enabled
                        div.share-holder.no-fix-share
                            span #{text.share} :
                            div.share-container
