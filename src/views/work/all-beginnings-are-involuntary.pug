extends ../../templates/view.pug

block variables
    - var title = works['all-beginnings-are-involuntary'].title
    - var current_slug = 'work/' + works['all-beginnings-are-involuntary'].slug
    - var static_folder_path = '../../static'
    - var selected_menu_option = works['all-beginnings-are-involuntary'].menu_item_id
    - var selected_works_is_active = true
    - var work = works['all-beginnings-are-involuntary']
    - var work_imagens_path = static_folder_path + '/images/work/all-beginnings-are-involuntary'

block view_content
    // fixed-column
    .fixed-column.larger-column
        .bg.bg-blur(data-bg=work_imagens_path + '/thumbnail.jpg')
        // work-main-image
        .work-main-image.with-max-width
            img.respimg(src=work_imagens_path + '/main_thumbnail.jpg' alt='')
            a.single-popup-image.slider-zoom(data-src=work_imagens_path + '/main.jpg')
                i.fa.fa-search
        // work-main-image end
    // fixed-column end
    // column-wrap
    .column-wrap.smaller-column.vertical-align
        // content
        .content
            section
                // section-title
                .section-title
                    h2 #{work.title}
                // section-title end
                // section-content
                .section-content
                    blockquote
                        p(style='white-space:pre;')
                            | #{work.text.quote_1_1}
                            if (work.text.quote_1_1_translation_source.length)
                                br
                                span.blockquote-line-translation_source #{work.text.quote_1_1_translation_source}
                            br
                            | #{work.text.quote_1_2}
                            if (work.text.quote_1_2_translation_source.length)
                                br
                                span.blockquote-line-translation_source #{work.text.quote_1_2_translation_source}
                            br
                            | #{work.text.quote_1_3}
                            if (work.text.quote_1_3_translation_source.length)
                                br
                                span.blockquote-line-translation_source #{work.text.quote_1_3_translation_source}
                            br
                            | #{work.text.quote_1_4}
                            if (work.text.quote_1_4_translation_source.length)
                                br
                                span.blockquote-line-translation_source #{work.text.quote_1_4_translation_source}
                        p #{work.text.quote_1_author}
                    ul.work-details
                        li
                            span #{text.location} : 
                            a(href=work.details.location.url target='_blank') #{work.details.location.value}
                        li
                            span #{text.year} : 
                            a(href='#') #{work.details.date}
                        li
                            span #{text.gear} : 
                            a(href='#') #{work.details.gear}
                    // share
                    if share_enabled
                        div.share-holder.no-fix-share
                            span #{text.share} :
                            div.share-container
                    // share end
                // section-content end
        // content end
    // column wrap
