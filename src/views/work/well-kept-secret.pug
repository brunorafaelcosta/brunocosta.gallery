extends ../../templates/view.pug

block variables
    - var title = works['well-kept-secret'].title
    - var current_slug = 'work/' + works['well-kept-secret'].slug
    - var static_folder_path = '../../static'
    - var selected_menu_option = works['well-kept-secret'].menu_item_id
    - var selected_works_is_active = true
    - var work = works['well-kept-secret']
    - var work_imagens_path = static_folder_path + '/images/work/well-kept-secret'

block view_content
    // fixed-column
    .fixed-column.larger-column
        .bg.bg-blur(data-bg=work_imagens_path + '/thumbnail.jpg')
        // work-main-image
        .work-main-image
            img.respimg(src=work_imagens_path + '/main_thumbnail.jpg' alt='')
            a.single-popup-image.slider-zoom(data-src=work_imagens_path + '/main.jpg')
                i.fa.fa-search
        // work-main-image end
    // fixed-column end
    // column-wrap
    .column-wrap.smaller-column.vertical-align
        // content
        .content
            section
                // section-title
                .section-title
                    h2 #{work.title}
                // section-title end
                // section-content
                .section-content
                    ul.work-details
                        li
                            span #{text.location} : 
                            a(href=work.details.location.url target='_blank') #{work.details.location.value}
                        li
                            span #{text.date} : 
                            a(href='#') #{work.details.date}
                        li
                            span #{text.gear} : 
                            a(href='#') #{work.details.gear}
                // section-content end
        // content end
    // column wrap
